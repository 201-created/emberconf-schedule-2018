{{#if this.isDebug}}
  <div>
    <input
      type="range"
      min="32400"
      max="68400"
      {{on "input" (action this.setSecondsInDay value="target.value")}}
    >
    {{this.now}}
  </div>
{{/if}}

{{#each this.days as |day index|}}
  <ConferenceDay
    @day={{day}}
    @index={{index}}
    @now={{this.now}}
  />
{{/each}}

<div class="github">
  <a href="https://github.com/Addepar/emberconf-schedule-2019" target="_blank" rel="noopener" aria-label="GitHub">
    <Icons::Github />
    <strong>Curious what's going on here?</strong>
    Check out the code on GitHub!
  </a>
</div>
