<small>{{formattedStart}}-{{formattedEnd}}</small>

<h3>{{session.name}}</h3>

{{#if session.speakers}}
  <ul class="speakers">
    {{#each session.speakers as |speaker|}}
      <li>{{speaker}}</li>
    {{/each}}
  </ul>
{{/if}}

{{#if session.description}}
  <div class="description">
    <p>{{session.description}}</p>

    {{#if session.sessions}}
      <ul class="minitalks">
        {{#each session.sessions as |minitalk|}}
          <li>
            <div class="minitalk-time">{{minitalk.time}}</div>
            <div class="minitalk-title">{{minitalk.title}}</div>
            <div class="minitalk-speaker">{{minitalk.speaker}}</div>
          </li>
        {{/each}}
      </ul>
    {{/if}}
  </div>
{{/if}}
